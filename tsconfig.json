{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@reactive/app": ["apps/app/src/index.ts"],
      "@reactive/core": ["libs/core/src/index.ts"],
      "@reactive/ionic": ["libs/ionic/src/index.ts"],
      "@reactive/angular": ["libs/angular/src/index.ts"],
      "@reactive/state": ["libs/state/src/index.ts"],
      "@reactive/records": ["libs/records/src/index.ts"],
      "@reactive/firebase": ["libs/firebase/src/index.ts"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
